<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="Stripe\ShopwarePlugin\Resources\snippet\de_DE\SnippetFile_de_DE">
            <tag name="shopware.snippet.file"/>
        </service>

        <service id="Stripe\ShopwarePlugin\Resources\snippet\en_GB\SnippetFile_en_GB">
            <tag name="shopware.snippet.file"/>
        </service>

        <service id="Stripe\ShopwarePlugin\Payment\Controller\PersistPaymentMethodSettingsController" public="true">
            <argument type="service" id="Stripe\ShopwarePlugin\Payment\Services\SessionService"/>

            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="Stripe\ShopwarePlugin\Payment\Controller\WebhookController" public="true">
            <argument type="service" id="Stripe\ShopwarePlugin\Payment\StripeApi\StripeApiFactory"/>
            <argument type="service" id="Stripe\ShopwarePlugin\Payment\Handler\WebhookHandler"/>

            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="Stripe\ShopwarePlugin\Payment\Controller\ApplePayController" public="true">
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>
    </services>
</container>
