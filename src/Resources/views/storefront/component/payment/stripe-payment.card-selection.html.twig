<div class="modal fade stripe-payment-card-cvc-info-wrapper"
     id="stripe-payment-card-cvc-info-wrapper"
     style="padding-right: 15px"
     tabindex="-1"
     role="dialog">
    <div class="modal-dialog modal-lg modal-dialog-scrollable modal-dialog-centered"
         role="document">
        <div class="modal-content">
            <div class="modal-header">
                <div class="modal-title h5">
                    cvc info
                </div>
                <button type="button"
                        class="modal-close close"
                        aria-label="Close"
                        onclick="$('#stripe-payment-card-cvc-info-wrapper').modal('hide')">
                                        <span aria-hidden="true">
                                            {% sw_icon 'x' style { 'size': 'sm' } %}
                                        </span>
                </button>
            </div>
            <div class="modal-body row">
                <div class="stripe-payment-visa stripe-payment-card-cvc-info-popup-cardtype col-md-6">
                    <div class="stripe-payment-card-cvc-header" style="display: flex; justify-content: space-between">
                                            <span class="stripe-payment-card-cvc-header-title">
                                                {{ "stripe_payment.form.card.cvc_info.visa_mastercard.header.title.card"|trans }}<br>
                                                <strong>{{ "stripe_payment.form.card.cvc_info.visa_mastercard.header.title.front"|trans }}</strong>
                                            </span>
                        <div class="stripe-payment-card-cvc-header-logos">
                            <div class="stripe-payment-provider-logo mastercard"></div>
                            <div class="stripe-payment-provider-logo visa"></div>
                        </div>
                    </div>
                    <img style="width: 100%" src="data:image/svg+xml;base64," alt="">
                    <div class="stripe-payment-card-cvc-infotext">
                        <strong>{{ "stripe_payment.form.card.cvc_info.visa_mastercard.title"|trans }}:</strong> {{ "stripe_payment.form.card.cvc_info.visa_mastercard.message"|trans }}
                    </div>
                </div>
                <div class="stripe-payment-amex stripe-payment-card-cvc-info-popup-cardtype col-md-6">
                    <div class="stripe-payment-card-cvc-header" style="display: flex; justify-content: space-between">
                                            <span class="stripe-payment-card-cvc-header-title">
                                                {{ "stripe_payment.form.card.cvc_info.amex.header.title.card"|trans }}<br>
                                                <strong>{{ "stripe_payment.form.card.cvc_info.amex.header.title.back"|trans }}</strong>
                                            </span>
                        <div class="stripe-payment-card-cvc-header-logos">
                            <div class="stripe-payment-provider-logo american-express"></div>
                        </div>
                    </div>
                    <img style="width: 100%" src="data:image/svg+xml;base64," alt="">
                    <div class="stripe-payment-card-cvc-infotext">
                        <strong>{{ "stripe_payment.form.card.cvc_info.amex.title"|trans }}:</strong> {{ "stripe_payment.form.card.cvc_info.amex.message"|trans }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="stripe-payment-card-form">
    <div class="stripe-payment-error-box" role="alert" class="alert alert-danger alert-has-icon" style="display: none;">
        {% sw_icon 'blocked' %}
        <div class="alert-content-container">
            <div class="alert-content"></div>
        </div>
    </div>
    <div>
        {% if stripeData.allowSavingCreditCard or stripeData.availableCards|length > 0 %}
            <div class="form-row">
                <div class="form-group col-md-6">
                    <div class="saved-cards">
                        <label class="form-label" for="stripe-payment-saved-cards-select">
                            {{ "stripe_payment.form.card.card_selection.saved_cards"|trans }}
                        </label>
                        <div class="select-field">
                            <select id="stripe-payment-saved-saved-cards-select" class="stripe-saved-cards custom-select">
                                <option value="new" selected>
                                    <span>{{ "stripe_payment.form.card.card_selection.new_card"|trans }}</span>
                                </option>
                                {% for card in stripeData.availableCards %}
                                    <option value="{{ card.id }}">
                                        {{ card.name }} | {{ card.brand }} | &bull;&bull;&bull;&bull;{{ card.last4 }} | {{ "%02d"|format(card.exp_month) }}/{{ card.exp_year }}
                                    </option>
                                {% endfor %}
                            </select>
                        </div>
                    </div>
                </div>
            </div>
        {% endif %}
        <div class="form-row stripe-card-row">
            <div class="form-group col-md-6">
                {# Card holder #}
                <div class="stripe-card-field">
                    <div>
                        <label class="form-label" for="stripe-payment-card-holder-input">
                            {{ "stripe_payment.form.card.holder"|trans }} *
                        </label>
                        <input type="text"
                               id="stripe-payment-card-holder-input"
                               class="stripe-card-holder form-control"
                               value="{{ context.customer.firstName }} {{ context.customer.lastName }}"
                               required="required">
                    </div>
                </div>
            </div>
            <div class="form-group col-md-6">
                {# Card number #}
                <div class="stripe-card-field">
                    <div>
                        <label class="form-label" for="stripe-payment-card-number-input">
                            {{ "stripe_payment.form.card.number"|trans }} *
                        </label>
                        <div id="stripe-payment-card-number-input" class="stripe-element-card-number form-control"><!-- Stripe element is inserted here --></div>
                    </div>
                </div>
            </div>
        </div>
        <div class="form-row stripe-card-row">
            <div class="form-group col-md-6">
                {# Expiry date #}
                <div class="stripe-card-field">
                    <div>
                        <label class="form-label" for="stripe-payment-card-expiry-input">
                            {{ "stripe_payment.form.card.expiry"|trans }} *
                        </label>
                        <div id="stripe-payment-card-expiry-input" class="stripe-element-card-expiry form-control"><!-- Stripe element is inserted here --></div>
                    </div>
                </div>
            </div>
            <div class="form-group col-md-6">
                <div style="display: flex; justify-content: space-around">
                    {# CVC #}
                    <div class="stripe-card-field" style="flex-grow: 1; margin-right: 0.5em">
                        <div>
                            <label class="form-label" for="stripe-payment-card-cvc-input">
                                {{ "stripe_payment.form.card.cvc"|trans }} *
                            </label>
                            <div id="stripe-payment-card-cvc-input" class="stripe-element-card-cvc form-control"><!-- Stripe element is inserted here --></div>
                        </div>
                    </div>
                    <div class="stripe-card-cvc-help" style="flex-grow: 0; position: relative; top: 2.35em"
                         data-toggle="modal"
                         data-modal-class="quickview-modal"
                         data-target="#stripe-payment-card-cvc-info-wrapper">
                        {% sw_icon 'info' %}
                    </div>
                </div>
            </div>
        </div>
        {% if stripeData.allowSavingCreditCards %}
            <div class="form-row stripe-card-row">
                <div class="form-group">
                    {# Save data #}
                    <div class="stripe-card-field custom-control custom-checkbox">
                        <input id="stripe-payment-save-card-checkbox" class="stripe-save-card custom-control-input" type="checkbox">
                        <label class="custom-control-label" for="stripe-payment-save-card-checkbox">
                            {{ "stripe_payment.form.card.save_card"|trans }}
                        </label>
                    </div>
                </div>
            </div>
        {% endif %}

        <div class="stripe-card-field">
            {{ "stripe_payment.form.required"|trans }}
        </div>

        {# A box for displaying validation errors #}
        <div role="alert" class="alert alert-danger alert-has-icon stripe-payment-validation-error-box" style="display: none;">
            {% sw_icon 'blocked' %}
            <div class="alert-content-container">
                <div class="alert-content"></div>
            </div>
        </div>
    </div>
</div>
<template data-stripe-payment-card-selection data-stripe-payment-card-selection-options="{{
stripeData|merge({
    'persistUrl': path('frontend.checkout.stripePayment.persist'),
    'snippets': {
        "error": "stripe_payment.form.error"|trans,
        "errors": {
            "api_connection_error": "stripe_payment.form.card.errors.api_connection_error"|trans,
            "card_declined": "stripe_payment.form.card.errors.card_declined"|trans,
            "expired_card": "stripe_payment.form.card.errors.expired_card"|trans,
            "incomplete_card": "stripe_payment.form.card.errors.incomplete_card"|trans,
            "incomplete_cvc": "stripe_payment.form.card.errors.incomplete_cvc"|trans,
            "incomplete_expiry": "stripe_payment.form.card.errors.incomplete_expiry"|trans,
            "incomplete_number": "stripe_payment.form.card.errors.incomplete_number"|trans,
            "incorrect_cvc": "stripe_payment.form.card.errors.incorrect_cvc"|trans,
            "incorrect_number": "stripe_payment.form.card.errors.incorrect_number"|trans,
            "invalid_card_holder": "stripe_payment.form.card.errors.invalid_card_holder"|trans,
            "invalid_cvc": "stripe_payment.form.card.errors.invalid_cvc"|trans,
            "invalid_expiry_month": "stripe_payment.form.card.errors.invalid_expiry_month"|trans,
            "invalid_expiry_month_past": "stripe_payment.form.card.errors.invalid_expiry_month_past"|trans,
            "invalid_expiry_year": "stripe_payment.form.card.errors.invalid_expiry_year"|trans,
            "invalid_expiry_year_past": "stripe_payment.form.card.errors.invalid_expiry_year_past"|trans,
            "invalid_number": "stripe_payment.form.card.errors.invalid_number"|trans,
            "processing_error": "stripe_payment.form.card.errors.processing_error"|trans,
            "processing_error_intransient": "stripe_payment.form.card.errors.processing_error_intransient"|trans,
            "unexpected": "stripe_payment.form.card.errors.unexpected"|trans,
            "no_card_selected": "stripe_payment.form.card.errors.no_card_selected"|trans,
            "card_not_found": "stripe_payment.form.card.errors.card_not_found"|trans,
        }
    }
})|json_encode()|escape('html_attr')
}}"></template>
