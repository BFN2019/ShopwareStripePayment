<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="Stripe\ShopwarePlugin\Payment\CheckoutSubscriber">
            <argument type="service" id="Stripe\ShopwarePlugin\Payment\Settings\SettingsService"/>
            <argument type="service" id="Stripe\ShopwarePlugin\Payment\StripeApi\StripeApiFactory"/>
            <argument type="service" id="Stripe\ShopwarePlugin\Payment\Services\SessionService"/>
            <argument type="service" id="Stripe\ShopwarePlugin\Payment\Util\PaymentContext"/>
            <argument type="service" id="country.repository"/>
            <argument type="service" id="customer.repository"/>
            <argument type="service" id="language.repository"/>
            <tag name="kernel.event_subscriber"/>
        </service>
    </services>
</container>
