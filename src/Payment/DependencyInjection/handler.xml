<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="Stripe\ShopwarePlugin\Payment\Handler\SofortPaymentHandler">
            <argument type="service" id="Stripe\ShopwarePlugin\Payment\StripeApi\StripeApiFactory"/>
            <argument type="service" id="Stripe\ShopwarePlugin\Payment\Util\PaymentContext"/>
            <argument type="service" id="order_address.repository"/>
            <argument type="service" id="currency.repository"/>
            <argument type="service" id="Shopware\Core\Checkout\Order\Aggregate\OrderTransaction\OrderTransactionStateHandler"/>
            <tag name="shopware.payment.method.async"/>
        </service>
        <service id="Stripe\ShopwarePlugin\Payment\Handler\CardPaymentHandler">
            <argument type="service" id="Stripe\ShopwarePlugin\Payment\StripeApi\StripeApiFactory"/>
            <argument type="service" id="Stripe\ShopwarePlugin\Payment\Util\PaymentContext"/>
            <argument type="service" id="order_address.repository"/>
            <argument type="service" id="currency.repository"/>
            <argument type="service" id="Shopware\Core\Checkout\Order\Aggregate\OrderTransaction\OrderTransactionStateHandler"/>
            <argument type="service" id="Stripe\ShopwarePlugin\Payment\Settings\SettingsService"/>
            <argument type="service" id="Stripe\ShopwarePlugin\Payment\Services\SessionService"/>
            <argument type="service" id="customer.repository"/>
            <tag name="shopware.payment.method.async"/>
        </service>
        <service id="Stripe\ShopwarePlugin\Payment\Handler\SepaPaymentHandler">
            <argument type="service" id="Stripe\ShopwarePlugin\Payment\StripeApi\StripeApiFactory"/>
            <argument type="service" id="Stripe\ShopwarePlugin\Payment\Util\PaymentContext"/>
            <argument type="service" id="order_address.repository"/>
            <argument type="service" id="currency.repository"/>
            <argument type="service" id="Shopware\Core\Checkout\Order\Aggregate\OrderTransaction\OrderTransactionStateHandler"/>
            <argument type="service" id="Stripe\ShopwarePlugin\Payment\Settings\SettingsService"/>
            <argument type="service" id="Stripe\ShopwarePlugin\Payment\Services\SessionService"/>
            <argument type="service" id="customer.repository"/>
            <tag name="shopware.payment.method.async"/>
        </service>
        <service id="Stripe\ShopwarePlugin\Payment\Handler\WebhookHandler">
            <argument type="service" id="Shopware\Core\Framework\DataAbstractionLayer\DefinitionInstanceRegistry"/>
            <argument type="service" id="Shopware\Core\Checkout\Order\Aggregate\OrderTransaction\OrderTransactionStateHandler"/>
            <argument type="service" id="Shopware\Core\Checkout\Order\Aggregate\OrderTransaction\OrderTransactionDefinition"/>
            <argument type="service" id="Stripe\ShopwarePlugin\Payment\Util\PaymentContext"/>
        </service>
    </services>
</container>
